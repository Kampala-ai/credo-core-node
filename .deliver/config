# .deliver/config

APP="credo_core_node"

BUILD_HOST="13.57.49.254"
BUILD_USER="ubuntu"
BUILD_AT="/tmp/edeliver/credo_core_node"

STAGING_HOSTS="13.57.49.254"
STAGING_USER="ubuntu"
TEST_AT="/var/www/credo_core_node/"

pre_erlang_clean_compile() {
  status "Compiling libsecp256k1"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile # load profile (optional)
    set -e # fail if any command fails (recommended)
    cd '$BUILD_AT' # enter the build directory on the build host (required)

    # Fix for libsecp256k1 compilation
    cd deps/libsecp256k1
    rebar compile eunit
  "

  status "Running phoenix.digest"
  __sync_remote " # runs the commands on the build host
    [ -f ~/.profile ] && source ~/.profile # load profile (optional)
    set -e # fail if any command fails (recommended)
    cd '$BUILD_AT' # enter the build directory on the build host (required)

    # Fix libsecp256k1 compilation
    cd deps/libsecp256k1
    rebar compile eunit
    cd ../..

    # Compile static assets
    cd assets
    yarn install
    brunch build --production
    cd ..
    mkdir -p priv/static # required by the phoenix.digest task
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phoenix.digest $SILENCE
  "
}
